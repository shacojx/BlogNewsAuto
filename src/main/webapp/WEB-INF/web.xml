<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>NewSecurity</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>RouterFilter</filter-name>
        <filter-class>Filter.RouterFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RouterFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <error-page>
        <error-code>404</error-code>
        <location>/View/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>400</error-code>
        <location>/View/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/View/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>502</error-code>
        <location>/View/error.jsp</location>
    </error-page>
    <servlet>
        <servlet-name>Authentication</servlet-name>
        <servlet-class>Controller.Servlet.Auth.Authentication</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddAccount</servlet-name>
        <servlet-class>Controller.Servlet.Auth.AddAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangePass</servlet-name>
        <servlet-class>Controller.Servlet.ChangePass</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>Controller.Servlet.Pro.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckIndex</servlet-name>
        <servlet-class>Controller.Servlet.Auth.CheckIndex</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangPassWord</servlet-name>
        <servlet-class>Controller.Servlet.Pro.ChangPassWord</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpImage</servlet-name>
        <servlet-class>Controller.Blog.UpImage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DownloadImage</servlet-name>
        <servlet-class>Controller.Blog.DownloadImage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpCover</servlet-name>
        <servlet-class>Controller.Blog.UpCover</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Profile</servlet-name>
        <servlet-class>Controller.Servlet.Pro.Profile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddReg</servlet-name>
        <servlet-class>Controller.Servlet.Auth.AddReg</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpNews</servlet-name>
        <servlet-class>Controller.Blog.UpNews</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListNews</servlet-name>
        <servlet-class>Controller.Blog.ListNews</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Authentication</servlet-name>
        <url-pattern>/Authen</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddAccount</servlet-name>
        <url-pattern>/AddAccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangePass</servlet-name>
        <url-pattern>/ChangePass</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/Login/Login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckIndex</servlet-name>
        <url-pattern>/homepage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangPassWord</servlet-name>
        <url-pattern>/ChangPassWord</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpImage</servlet-name>
        <url-pattern>/UpImage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DownloadImage</servlet-name>
        <url-pattern>/DownloadImage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpCover</servlet-name>
        <url-pattern>/UpCover</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Profile</servlet-name>
        <url-pattern>/Profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddReg</servlet-name>
        <url-pattern>/AddReg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpNews</servlet-name>
        <url-pattern>/UpNews</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListNews</servlet-name>
        <url-pattern>/ListNews</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>
</web-app>
